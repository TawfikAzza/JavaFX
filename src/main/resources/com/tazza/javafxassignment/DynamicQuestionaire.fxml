<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tazza.javafxassignment.DynamicQuestionaire">
   <center>
      <VBox fx:id="vBoxQuestion">
         <children>
            <HBox fx:id="hBoxQuestion" prefHeight="100.0" prefWidth="200.0" alignment="BASELINE_CENTER"/>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="calculateScore" mnemonicParsing="false" onAction="#calculateScore" text="Calculate">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="sendResult" mnemonicParsing="false" onAction="#sendResult" text="Send Results">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
